
<div class="panel panel-default">
  <div class="panel-heading">
    文章列表
  </div>
  <div class="table-responsive">
    <table style="table-layout:fixed" class="table table-striped b-t b-light">
      <thead>
        <tr>
          <th width="10%">Title</th>
         <!--  <th width="20%">Content</th> -->
          <th width="10%">From</th>
          <th width="10%">Url</th>
          <th style="width:150px;">创建时间</th>
          <th width="15%">操作</th>
        </tr>
      </thead>
      <tbody>
        <%= render(@articles) %>
      </tbody>
    </table>
    <footer class="panel-footer">
      <%= render partial: "shared/admin/paginate", locals: { object: @articles } %>
    </footer>
  </div>
</div>
