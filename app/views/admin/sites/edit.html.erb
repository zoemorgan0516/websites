<%= simple_form_for [:admin, @site] do |f| %>
  <%= f.input :name,  label: "站点名字" %>
  <%= f.input :domain, label: "站点域名" %>
  <%= f.input :avatar, label: "navbar网站logo" %>
  <br>

  <!-- slider_pictures -->
  <!-- 显示图片,并可删除图片 -->
  <h4>滑动图片</h4>
  <% @site.photos.all.each do |photo| %>
  <div id="<%= photo.id %>">
    <img src="<%= photo.avatar_url("zoe666") %>" >
    <br>
    <a class="btn btn-default btn-xs" rel="nofollow" data-method="delete" href="/admin/photos/<%= photo.id %>/delete" id="<%= photo.id %>btn">删除</a>
  </div>
  <% end %>
  <!-- 添加新的图片-->
  <h5>滑动图片位置（请选三张）</h5>
  <%= f.simple_fields_for :photos do |a| %>
    <%= a.file_field :avatar, :multiple => true, name: "photos[avatar][]" %>
  <% end %>
  <br>
  <h4>滑动图片配置文字</h4>
  <%= f.input :slider_string1, label: "滑动图片1配置文字" %>
  <%= f.input :slider_string2, label: "滑动图片2配置文字" %>
  <%= f.input :slider_string3, label: "滑动图片3配置文字" %>
  <br>

  <!-- advantage_pictures -->
  <h4>优势图片</h4>
  <% @site.advantage_pics.all.each do |advantage_pic| %>
  <div id="<%= advantage_pic.id %>">
    <img src="<%= advantage_pic.avatar_url("zoe666") %>" >
    <br>
    <a class="btn btn-default btn-xs" rel="nofollow" data-method="delete" href="/admin/advantage_pics/<%= advantage_pic.id %>/delete" id="<%= advantage_pic.id %>btn">删除</a>
  </div>
  <% end %>
  <!-- 添加新的图片-->
  <h5>优势图片位置（请选六张）</h5>
  <%= f.simple_fields_for :advantage_pics do |a| %>
    <%= a.file_field :avatar, :multiple => true, name: "advantage_pics[avatar][]" %>
  <% end %>
  <br>
  <h4>优势图片配置文字</h4>
  <%= f.input :advantage_string1, label: "优势图片1配置文字" %>
  <%= f.input :advantage_string2, label: "优势图片2配置文字" %>
  <%= f.input :advantage_string3, label: "优势图片3配置文字" %>
  <%= f.input :advantage_string4, label: "优势图片4配置文字" %>
  <%= f.input :advantage_string5, label: "优势图片5配置文字" %>
  <%= f.input :advantage_string6, label: "优势图片6配置文字" %>
  <br>


  <!-- cooperation_pictures -->
  <h4>合作伙伴图片</h4>
  <% @site.cooperation_pics.all.each do |cooperation_pic| %>
  <div id="<%= cooperation_pic.id %>">
    <img src="<%= cooperation_pic.avatar_url("zoe666") %>" >
    <br>
    <a class="btn btn-default btn-xs" rel="nofollow" data-method="delete" href="/admin/cooperation_pics/<%= cooperation_pic.id %>/delete" id="<%= cooperation_pic.id %>btn">删除</a>
  </div>
  <% end %>
  <!-- 添加新的图片-->
  <h5>合作伙伴图片位置（请选八张）</h5>
  <%= f.simple_fields_for :cooperation_pics do |a| %>
    <%= a.file_field :avatar, :multiple => true, name: "cooperation_pics[avatar][]" %>
  <% end %>
  <br>
  <h4>合作伙伴图片配置</h4>
  <%= f.input :cooperation_string, label: "合作伙伴图片配置文字" %>
  <%= f.input :cooperation_url, label: "合作伙伴图片配置url" %>
  <br>
  <br>

  <!-- 网站footer设计 design -->
  <%= f.simple_fields_for :footer do |n| %>
    <%= n.input :avatar, as: :file, label: "公司网站二维码" %>
    <%= n.input :company_number, label: "公司电话" %>
    <%= n.input :company_address, label: "公司地址" %>
  <% end %>

  <div class="line line-dashed b-b line-lg pull-in"></div>
  <div class="col-sm-10 col-sm-offset-2">
      <%= f.button :submit, "提 交", class: "btn btn-primary" %>
      <%= link_to "返 回", admin_sites_path, class: "btn btn-default" %>
  </div>
<% end %>
