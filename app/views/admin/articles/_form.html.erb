<%= simple_form_for([:admin, @article], html: { multipart: true, class: "form-horizontal" }) do |f| %>
  <%#= f.input :title, label: "文章标题" %>
  <div class="form-group string required article_title">
    <label class="col-sm-2 control-label string required" for="article_title">
      <abbr title="required">*</abbr>
      文章标题
    </label>
    <div class="col-sm-10">
       <input class="form-control string required" type="text" value="<%= article.title %>" name="article[title]" id="article_title">
    </div>
  </div>

  <div class="form-group text required page_content">
      <label class="text  col-sm-2 control-label" for="page_content">
        文章内容
      </label>
      <div class="col-sm-10">
            <script type="text/plain" id="contentEditor" name="article[content]" id="article_content" style="width:100%;height:300px;">
                <%= raw(@article.content) %>
            </script>
      </div>
  </div>

  <%#= f.input :from, label: "来源" %>
  <div class="form-group string optional article_from">
    <label class="col-sm-2 control-label string optional" for="article_from">
      来源
    </label>
    <div class="col-sm-10">
       <input class="form-control string optional" type="text" value="<%= article.from %>" name="article[from]" id="article_from">
    </div>
  </div>

  <%#= f.input :url, label: "链接" %>
  <div class="form-group string optional article_url">
    <label class="col-sm-2 control-label string optional" for="article_url">
      链接地址
    </label>
    <div class="col-sm-10">
       <input class="form-control string optional" type="text" value="<%= article.url %>" name="article[url]" id="article_url">
    </div>
  </div>

  <div class="line line-dashed b-b line-lg pull-in"></div>
  <div class="col-sm-10 col-sm-offset-2">
      <%= f.button :submit, "提 交", class: "btn btn-primary" %>
      <%= link_to "返 回", :back, class: "btn btn-default" %>
  </div>
<% end %>

<%= content_for :style do %>
  <link rel="stylesheet" type="text/css" href="umeditor.css">
<% end %>

<% content_for :script do %>
  <script type="text/javascript" charset="utf-8" src="/umeditor/umeditor.config.js"></script>
  <script type="text/javascript" charset="utf-8" src="/umeditor/umeditor.min.js"></script>
  <script type="text/javascript" charset="utf-8" src="/umeditor/lang/zh-cn/zh-cn.js"></script>
  <script type="text/javascript">
    var um1 = UM.getEditor('contentEditor');
  </script>
<% end %>
