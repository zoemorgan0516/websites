<tr>
   <td><%= user.email %></td>
   <td><%= !user.site.blank? ? user.site.domain : "" %></td>
   <td><%= user.role %></td>
   <td><%= user.created_at.strftime("%F %T")%></td>
   <td>
     <% if current_user.role == "super" %>
       <%= link_to "修改管理员信息", edit_user_path(user), class: "btn btn-default btn-xs" %>
     <% else %>
       <%= link_to "修改密码", edit_user_path(user), class: "btn btn-default btn-xs" %>
     <% end %>
     <% if can? :delete, User %>
     <%= link_to "删除", user_path(user), method: :delete, class: "btn btn-default btn-xs" %>
     <% end %>
   </td>
</tr>
