<%= simple_form_for [:admin, @site] do |f| %>
  <%= f.input :name,  label: "站点名字" %>
  <%= f.input :domain, label: "站点域名" %>
  <%= f.input :avatar, label: "navbar网站logo" %>
  <br>

  <!-- slider_pictures -->
  <!-- 显示图片,并可删除图片 -->
  <h4>当前网站显示的滑动图片</h4>
  <% @site.photos.all.each do |photo| %>
  <div id="<%= photo.id %>">
    <img src="<%= photo.avatar_url("zoe666") %>" >
    <br>
    <a class="btn btn-default btn-xs" rel="nofollow" data-method="delete" href="/admin/photos/<%= photo.id %>/delete" id="<%= photo.id %>btn">删除</a>
  </div>
  <% end %>
  <!-- 隐藏图片，实现删除后图片自动不见 -->
  <% content_for :script do %>
    <script type="text/javascript">
      $(document).ready(function(){
        <% @site.photos.all.each do |photo| %>
        $("#<%= photo.id %>btn").click(function(){
          $("#<%= photo.id %>").hide();
          $("#<%= photo.id %>btn").hide();
        });
        <% end %>
      });
    </script>
  <% end %>
  <!-- 添加新的图片-->
  <h5>选择新的滑动图片（上面显示图片和新选择图片数量之和为3张）</h5>
  <h5>图片宽高尺寸分别为1347x500左右</h5>
  <%= f.simple_fields_for :photos do |a| %>
    <%= a.file_field :avatar, :multiple => true, name: "photos[avatar][]" %>
  <% end %>
  <br>
  <h4>滑动图片配置文字</h4>
  <%= f.input :slider_string1, label: "滑动图片1配置文字" %>
  <%= f.input :slider_string2, label: "滑动图片2配置文字" %>
  <%= f.input :slider_string3, label: "滑动图片3配置文字" %>
  <br>

  <!-- advantage_pictures -->
  <h4>当前网站显示的优势图片</h4>
