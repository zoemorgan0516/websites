    <img src="<%= advantage_pic.avatar_url("zoe666") %>" >
    <br>
    <a class="btn btn-default btn-xs" rel="nofollow" data-method="delete" href="/admin/advantage_pics/<%= advantage_pic.id %>" id="<%= advantage_pic.id %>btn">删除</a>
  </div>
  <% end %>
  <!-- 隐藏图片，实现删除后图片自动不见 -->
  <% content_for :script do %>
    <script type="text/javascript">
      $(document).ready(function(){
        <% @site.advantage_pics.all.each do |advantage_pic| %>
        $("#<%= advantage_pic.id %>btn").click(function(){
          $("#<%= advantage_pic.id %>").hide();
          $("#<%= advantage_pic.id %>btn").hide();
        });
        <% end %>
      });
    </script>
  <% end %>
  <!-- 添加新的图片-->
  <h5>选择新的优势图片（上面显示图片和新选择图片数量之和为6张）</h5>
  <h5>图片宽高尺寸分别为280x180左右</h5>
  <%= f.simple_fields_for :advantage_pics do |a| %>
